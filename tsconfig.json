{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "types",
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es2015", "dom"],
      "module": "es6",
      "noImplicitAny": true,
      "outDir": "./dist",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es5"
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "dist"]
}